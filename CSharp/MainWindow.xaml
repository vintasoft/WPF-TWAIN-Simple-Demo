<Window x:Class="WpfTwainSimpleDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="VintaSoft WPF TWAIN Simple Demo" Width="515" MinWidth="515" MinHeight="500" WindowStartupLocation="CenterScreen"
    Closing="Window_Closing">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="top" Margin="5" Orientation="Horizontal" HorizontalAlignment="Left" >
            <StackPanel DockPanel.Dock="top" Margin="5" HorizontalAlignment="Center" >
            <CheckBox Height="16" Name="twain2CheckBox" Width="120" IsChecked="True">TWAIN 2</CheckBox>
            <CheckBox Height="16" Name="showUiCheckBox" Width="120" IsChecked="True">Show UI</CheckBox>
            <CheckBox Height="16" Name="showIndicatorsCheckBox" Width="120" IsChecked="True">Show Indicators</CheckBox>
            </StackPanel>
            <Button Name="scanImagesButton" Click="scanImagesButton_Click" Width="352" Height="52">Scan Images</Button>
            <Label Width="10" />
            
        </StackPanel>
        
        <Border BorderThickness="2" BorderBrush="Black">
            <Image Name="image1" Stretch="Fill" />
        </Border>
    </DockPanel>
</Window>
